{
  "gateway": {
    "port": 18789,
    "mode": "local",
    "bind": "lan",
    "auth": {
      "mode": "token",
      "token": "nasopenclaw-z-change-me"
    }
  },
  "models": {
    "providers": {
      "anthropic": {
        "baseUrl": "https://api.z.ai/api/anthropic/v1",
        "apiKey": "${ZAI_API_KEY}",
        "api": "anthropic",
        "models": [
          {
            "id": "anthropic/claude-sonnet-4-5",
            "name": "GLM via Z.AI",
            "reasoning": false,
            "input": ["text"],
            "cost": { "input": 0, "output": 0, "cacheRead": 0, "cacheWrite": 0 },
            "contextWindow": 200000,
            "maxTokens": 8192
          }
        ]
      }
    }
  },
  "agents": {
    "defaults": {
      "workspace": "~/.openclaw/workspace",
      "model": {
        "primary": "anthropic/claude-sonnet-4-5"
      }
    }
  },
  "channels": {
    "whatsapp": {
      "dmPolicy": "allowlist",
      "allowFrom": ["${WHATSAPP_NUMBER}"],
      "selfChatMode": false,
      "ackReaction": {
        "emoji": "ðŸ‘€",
        "direct": true
      }
    }
  }
}
